# ============================================================
# Nirantar RTMP - Environment Configuration
# ============================================================
# Copy this file to .env and customize for your deployment:
#   cp .env.example .env
# ============================================================

# ==================== DATABASE ====================
POSTGRES_USER=livestream_admin
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=livestream_db
DATABASE_URL=postgres://livestream_admin:CHANGE_THIS_TO_SECURE_PASSWORD@postgres:5432/livestream_db?sslmode=disable

# ==================== AUTHENTICATION ====================
# Generate a secure random string (64 characters recommended)
# You can generate one using: openssl rand -base64 48
NEXTAUTH_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
NEXTAUTH_URL=http://localhost:3002

# ==================== INTERNAL SERVICES ====================
# These are internal Docker network URLs - no need to change
SRS_API_URL=http://srs:1985
CONTROLLER_API_URL=http://controller:8080

# ==================== PUBLIC ACCESS ====================
# Set these to your server's public IP or domain for production
# Leave empty for local development (uses browser hostname)
PUBLIC_HOST=
RTMP_HOST=
RTMP_PORT=1935

# ==================== SECURITY ====================
# 32-byte hex encryption key for storing sensitive data
# Generate using: openssl rand -hex 32
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ==================== FEATURES ====================
ENABLE_AUTO_FAILOVER=true
ENABLE_DEBUG_LOGS=false

# ==================== APP URL ====================
# Used for email links and callbacks
APP_URL=http://localhost:3002

# ==================== OPTIONAL: ALERTS ====================
# Email for system alerts (optional)
ALERT_EMAIL=
# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# ============================================================
# NOTE: SMTP settings are configured in Admin UI > Config > Email
# ============================================================
